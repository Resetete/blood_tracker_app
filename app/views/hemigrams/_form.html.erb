<%= form_for :hemigram, url: hemigrams_path do |f| %>
  <%= render "devise/shared/error_messages", resource: @hemigram %>

  <%= f.label :parameter %>
  <%= f.select :parameter, options_for_select(Hemigram.parameters),
               { include_blank: @hemigram.new_record? ? 'Select' : @hemigram.parameter },
               class: 'form-control',
               required: true %>

  <%= f.label :value %>
  <%= f.text_field :value %>

  <%= f.label :unit %>
  <%= f.select :unit, options_for_select(Hemigram.units),
                { include_blank: @hemigram.new_record? ? 'Select' : @hemigram.unit },
                class: 'form-control',
                required: true %>


  <%= f.label :date %>
  <%= f.date_field :date, class: 'datepicker' %>

  <%= f.submit 'Submit', class: 'btn mt-3' %>

<% end %>

<%= link_to 'Back', :back, class: "badge badge-info mt-3" %>
