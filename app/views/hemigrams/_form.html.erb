<%= form_for :hemigram do |f| %>
  <%= render "devise/shared/error_messages", resource: @hemigram %>

  <%= f.label :parameter %>
  <%= f.select :parameter, options_for_select(Hemigram.parameters),
               { include_blank: 'Select' },
               class: 'form-control',
               required: true %>

  <%= f.label :value %>
  <%= f.text_field :value %>

  <%= f.label :unit %>
  <%= f.select :unit, options_for_select(Hemigram.units),
               { include_blank: 'Select' },
               class: 'form-control',
               required: true %>

  <%= f.label :date %>
  <%= f.date_field :date, class: 'datepicker' %>

  <%= f.submit %>
<% end %>
