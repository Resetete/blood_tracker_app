<h1> My Hemigrams </h1>

<p> to do </p>
<p> - add search that filters table </p>
<p> - add pagination, sort columns </p>

<div class="mb-3">
  <table class="striped highlight responsive-table">
    <thead>
      <tr>
        <th>Parameter</th>
        <th>Value</th>
        <th>Date</th>
      </tr>
    </thead>

    <tbody>
      <% @all_user_hemigrams.each do |hemigram| %>
      <tr>
        <td> <%= hemigram.parameter %> </td>
        <td> <%= hemigram.value %> </td>
        <td> <%= hemigram.date %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div>
    <%= will_paginate @all_user_hemigrams, container: false %>
</div>

<p> <%= link_to 'Enter new Hemigram', new_hemigram_path, class: 'btn' %> </p>
