<%= render 'shared/search' %>

<div class="mb-3">
  <table class="striped highlight responsive-table">
    <thead>
      <tr>
        <th>Parameter</th>
        <th>Value</th>
        <th>Unit</th>
        <th>Date</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @all_user_hemigrams.each do |hemigram| %>
      <tr>
        <td> <%= hemigram.parameter %> </td>
        <td> <%= hemigram.value %> </td>
        <td> <%= hemigram.unit %> </td>
        <td> <%= hemigram.date %> </td>
        <td> <%= link_to 'Edit', edit_hemigram_path(hemigram), class: 'waves-effect waves-light btn-flat' %>
             <%= link_to 'Delete', hemigram_path(hemigram), method: :delete, data: { confirm: 'Are you sure you want to delete this?' }, class: 'waves-effect waves-teal btn-flat' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= will_paginate(@all_user_hemigrams, container: true) %>
</div>


<p> <%= link_to 'Enter new Hemigram', new_hemigram_path, class: 'btn' %> </p>


