.container.devise-views.pt-5
  .header-title.p-0.m-0
    %h2
      %span.text-highlight Change your password

  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f|
    = render "devise/shared/error_messages", resource: resource
    = f.hidden_field :reset_password_token

    .field
      = f.label :password, "New password"
      - if @minimum_password_length
        %em= "(#{@minimum_password_length} characters minimum)"

      = f.password_field :password, autofocus: true, autocomplete: 'new-password'

    .field
      = f.label :password_confirmation, 'Confirm new password'
      = f.password_field :password_confirmation, autocomplete: 'new-password'

    .actions
      = f.submit "Change my password"

  = render "devise/shared/links"
