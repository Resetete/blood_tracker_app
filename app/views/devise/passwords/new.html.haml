.devise-views.container
  .header-title.p-0.m-0
    %h2
      %span.text-highlight
        Forgot your password?
  .row.mt-5
    .col-md-6
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f|
        = render "devise/shared/error_messages", resource: resource

        .mb-3
          = f.label :email, class: 'form-label', for: 'email_input'
          = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', id: 'email_input', placeholder: 'my_email@example.com'

        .actions.mb-2
          = f.submit('Send me reset password instructions', class: 'btn btn-outline-light')

      = render "devise/shared/links"