.container
  .card
    .card-body
      %h5.card-title= @blood_cell_description.title
      %p.card-text= @blood_cell_description.description
      %p
        created at:
        = @blood_cell_description.created_at
      %p
        updated at:
        = @blood_cell_description.updated_at
      %p
        Sources:
        %ul
        - @blood_cell_description.links.each do |link|
          %li= "#{link.name}, #{link.url}"
      %p
        Text generation AI tool:
        %ul
        - text_generators = @blood_cell_description.links.select(&:text_generator)
        - if text_generators.any?
          - text_generators.each do |generator|
            %li= "#{generator.name}, #{generator.url}"
        -else
          %li None

      = link_to 'Edit', edit_blood_cell_description_path(@blood_cell_description.id), class: 'btn btn-primary'
      = link_to 'Delete', blood_cell_description_path(@blood_cell_description.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this description?' }, class: 'btn btn-danger'
      = link_to 'All', blood_cell_descriptions_path, class: 'btn btn-info'
